root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{cs,md,yml,yaml,json}]
indent_style = space
indent_size = 2

[*.cs]
indent_size = 4

[*.md]
trim_trailing_whitespace = false

# Keep analyzer severity baseline incremental to avoid noisy rollouts.
dotnet_analyzer_diagnostic.severity = warning
